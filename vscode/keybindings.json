// 既定値を上書きするには、このファイル内にキー バインドを挿入します
[
  {
    // ターミナルがアクティブなときにCtrl+@でターミナルの表示/非表示を切り替え
    "key": "ctrl+[BracketLeft]",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    // エディタにフォーカスしているときのみ<space>hで左のタブに移動
    "key": "space h",
    "command": "workbench.action.previousEditor",
    "when": "neovim.mode == normal && editorTextFocus"
  },
  {
    // エディタにフォーカスしているときのみ<space>lで右のタブに移動
    "key": "space l",
    "command": "workbench.action.nextEditor",
    "when": "neovim.mode == normal && editorTextFocus"
  },
  {
    // Neovimのインサートモード以外で<space>eを押すとエクスプローラーを開く
    "key": "space e",
    "command": "workbench.view.explorer",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    // エクスプローラーが表示されているときに<space>eを押すとエクスプローラーを閉じる
    "key": "space e",
    "command": "workbench.action.closeSidebar",
    "when": "neovim.mode != insert && explorerViewletVisible && (editorTextFocus || explorerViewletFocus)"
  },
  {
    // Neovimのインサートモード以外で<space>pfを押すとクイックオープンを開く
    "key": "space p f",
    "command": "workbench.action.quickOpen",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    // Neovimのインサートモード以外で<space>pbを押すと開いているエディタの一覧を表示
    "key": "space p b",
    "command": "workbench.action.showAllEditors",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    // Neovimのインサートモード以外で<space>pgを押すとあいまい検索を開く
    "key": "space p g",
    "command": "workbench.action.terminal.searchWorkspace",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    // Neovimのインサートモード以外で<space>bdを押すとタブを閉じる
    "key": "space b d",
    "command": "workbench.action.closeActiveEditor",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    // Neovimのインサートモード以外で<space>tを押すとテーブルを整形（neovimのプラグインを実行）
    "key": "space t",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": " t"
  }
]
