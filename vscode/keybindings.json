// 既定値を上書きするには、このファイル内にキー バインドを挿入します
[
  {
    // ターミナルがアクティブなときにCtrl+@でターミナルの表示/非表示を切り替え
    "key": "ctrl+[BracketLeft]",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    // エディタにフォーカスしているときのみ<space>hで左のタブに移動
    "key": "space h",
    "command": "workbench.action.previousEditor",
    "when": "neovim.mode == normal && editorTextFocus"
  },
  {
    // エディタにフォーカスしているときのみ<space>lで右のタブに移動
    "key": "space l",
    "command": "workbench.action.nextEditor",
    "when": "neovim.mode == normal && editorTextFocus"
  },
  {
    // Neovimのノーマルモードで<space>eを押すとエクスプローラーを開く
    "key": "space e",
    "command": "workbench.view.explorer",
    "when": "neovim.mode == normal && editorTextFocus"
  },
  // エクスプローラーが表示されているときに<space>eを押すとエクスプローラーを閉じる
  {
    "key": "space e",
    "command": "workbench.action.closeSidebar",
    "when": "explorerViewletVisible && editorTextFocus"
  },
  // Neovimのノーマルモードで<space>fを押すとクイックオープンを開く
  {
    "key": "space f",
    "command": "workbench.action.quickOpen",
    "when": "neovim.mode == normal && editorTextFocus"
  }
]
