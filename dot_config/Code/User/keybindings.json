// 既定値を上書きするには、このファイル内にキー バインドを挿入します
[
  {
    // ターミナルがアクティブなときにCtrl+@でターミナルの表示/非表示を切り替え
    "key": "ctrl+[BracketLeft]",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    // エディタにフォーカスしているときのみ左のタブに移動
    "key": "space h",
    "command": "workbench.action.previousEditor",
    "when": "neovim.mode == normal && editorTextFocus"
  },
  {
    // エディタにフォーカスしているときのみ右のタブに移動
    "key": "space l",
    "command": "workbench.action.nextEditor",
    "when": "neovim.mode == normal && editorTextFocus"
  },
  {
    // Neovimのインサートモード以外でエクスプローラーを開く
    "key": "space e",
    "command": "workbench.view.explorer",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    // エクスプローラーが表示されているときにエクスプローラーを閉じる
    "key": "space e",
    "command": "workbench.action.closeSidebar",
    "when": "neovim.mode != insert && explorerViewletVisible && (editorTextFocus || explorerViewletFocus)"
  },
  {
    // Neovimのインサートモード以外でクイックオープンを開く
    "key": "space p",
    "command": "workbench.action.quickOpen",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    // Neovimのインサートモード以外で開いているエディタの一覧を表示
    "key": "space b",
    "command": "workbench.action.showAllEditors",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    // Neovimのインサートモード以外であいまい検索を開く
    "key": "space f",
    "command": "workbench.action.terminal.searchWorkspace",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    // Neovimのインサートモード以外でテーブルを整形（neovimのプラグインを実行）
    "key": "space t",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": " t"
  },
  {
    // NeovimのインサートモードでCtrl+yを押すと補完候補を確定
    "key": "ctrl+y",
    "command": "acceptSelectedSuggestion",
    "when": "suggestWidgetHasFocusedSuggestion && suggestWidgetVisible && textInputFocus && neovim.mode == insert"
  },
    // Neovimのインサートモード以外で通知一覧を表示
  {
    "key": "space n",
    "command": "notifications.showList",
    "when": "editorTextFocus && neovim.mode != insert"
  }
]

// VSCode Neovimでデフォルトで使えるもの
// gd: editor.action.revealDefinition
// K: editor.action.showHover
// C-n, C-p: Navigate lists, parameter hints, suggestions, quick-open, cmdline history, peek reference list
// 参考: https://github.com/vscode-neovim/vscode-neovim
