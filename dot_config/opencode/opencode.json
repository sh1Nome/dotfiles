{
  "$schema": "https://opencode.ai/config.json",
  "enabled_providers": ["github-copilot"],
  "model": "github-copilot/claude-haiku-4.5",
  "small_model": "github-copilot/gpt-5-mini",
  "agent": {
    "general": {
      "model": "github-copilot/gpt-5-mini"
    },
    "explore": {
      "model": "github-copilot/gpt-5-mini"
    },
    "compaction": {
      "model": "github-copilot/gpt-5-mini"
    },
    "title": {
      "model": "github-copilot/gpt-5-mini"
    },
    "summary": {
      "model": "github-copilot/gpt-5-mini"
    }
  },
  "permission": {
    "*": "ask",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "bash": {
      "git log *": "allow",
      "git diff *": "allow",
      "rg *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "tail *": "allow"
    },
    "skill": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "question": "allow"
  },
  "share": "disabled",
  "theme": "transparent",
  "tui": {
    "diff_style": "stacked"
  }
}
