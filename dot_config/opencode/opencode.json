{
  "$schema": "https://opencode.ai/config.json",
  "enabled_providers": ["github-copilot"],
  "model": "github-copilot/claude-haiku-4.5",
  "small_model": "github-copilot/gpt-4.1",
  "permission": {
    "*": "ask",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "bash": {
      "git log *": "allow",
      "git diff *": "allow",
      "rg *": "allow"
    },
    "skill": "allow",
    "todoread": "allow",
    "question": "allow",
    "share": "disabled"
  }
}
